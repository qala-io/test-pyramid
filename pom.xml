<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.qala.pyramid</groupId>
  <artifactId>test-pyramid</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>

  <modules>
    <module>test-pyramid-web</module>
    <module>test-pyramid-domain</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <springVersion>4.3.13.RELEASE</springVersion>
    <hibernateVersion>4.3.11.Final</hibernateVersion>
    <hibernateValidatorVersion>5.2.1.Final</hibernateValidatorVersion>

    <unit.be.tests.skip>false</unit.be.tests.skip>
    <unit.ui.tests.skip>false</unit.ui.tests.skip>
    <component.ui.tests.skip>true</component.ui.tests.skip>
    <component.be.tests.skip>false</component.be.tests.skip>
    <system.be.tests.skip>true</system.be.tests.skip>
    <system.ui.tests.skip>true</system.ui.tests.skip>
  </properties>

  <profiles>
    <profile>
      <id>RunSystemTests</id>
      <activation>
        <property>
          <name>runSystemTests</name>
          <value>true</value>
        </property>
      </activation>
      <properties>
        <unit.be.tests.skip>true</unit.be.tests.skip>
        <unit.ui.tests.skip>true</unit.ui.tests.skip>
        <component.ui.tests.skip>true</component.ui.tests.skip>
        <component.be.tests.skip>true</component.be.tests.skip>
        <system.be.tests.skip>false</system.be.tests.skip>
        <system.ui.tests.skip>false</system.ui.tests.skip>
      </properties>
    </profile>
    <profile>
      <id>RunUiTests</id>
      <activation>
        <property>
          <name>runUiTests</name>
          <value>true</value>
        </property>
      </activation>
      <properties>
        <unit.be.tests.skip>true</unit.be.tests.skip>
        <unit.ui.tests.skip>false</unit.ui.tests.skip>
        <component.ui.tests.skip>false</component.ui.tests.skip>
        <component.be.tests.skip>true</component.be.tests.skip>
      </properties>
    </profile>
  </profiles>
  
  <build>
    <testSourceDirectory>${project.basedir}/src/test/groovy</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.codehaus.gmavenplus</groupId>
        <artifactId>gmavenplus-plugin</artifactId>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.gmavenplus</groupId>
          <artifactId>gmavenplus-plugin</artifactId>
          <version>1.5</version>
          <configuration>
            <testSources>
              <source>
                <directory>${project.basedir}/src/test/groovy</directory>
              </source>
              <source>
                <directory>${project.basedir}/src/test/system-groovy</directory>
              </source>
            </testSources>
          </configuration>
          <executions>
            <execution>
              <goals>
                <goal>addSources</goal>
                <goal>addTestSources</goal>
                <goal>compile</goal>
                <goal>testCompile</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
    </dependency>
    <dependency>
